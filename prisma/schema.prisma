generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(50)
  email    String
  password String
  comments Comment[]
  reviews  Review[]
}

model Stadium {
  id         Int      @id @default(autoincrement())
  name       String
  location   String
  team       String
  reviews    Review[]
  categoryId Int
}

model Review {
  id             Int       @id @default(autoincrement())
  text           String
  scenery_rating Int
  food_rating    Int
  pricing_rating Int
  stadiumId      Int
  stadium        Stadium   @relation(fields: [stadiumId], references: [id])
  userId         Int
  user           User      @relation(fields: [userId], references: [id])
  comments       Comment[]
}

model Comment {
  id       Int    @id @default(autoincrement())
  text     String
  reviewId Int
  review   Review @relation(fields: [reviewId], references: [id])
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}
